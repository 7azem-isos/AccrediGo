{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=staging-server;Database=AccrediGoDb_Staging;User Id=staging_user;Password=staging_password;TrustServerCertificate=True;"
  },
  "Staging": {
    "EnableSwagger": true,
    "EnableDetailedErrors": false,
    "EnableDeveloperExceptionPage": false
  },
  "Cors": {
    "AllowedOrigins": [
      "https://staging.yourapp.com",
      "https://test.yourapp.com",
      "https://staging-frontend.yourapp.com"
    ],
    "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "AllowedHeaders": ["Authorization", "Content-Type", "X-Requested-With"]
  },
  "Database": {
    "EnableSensitiveDataLogging": false,
    "EnableDetailedErrors": false
  },
  "Security": {
    "RequireHttps": true,
    "EnableRateLimiting": true
  }
} 